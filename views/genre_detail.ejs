<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%>

    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <%- include('partials/sidenav'); -%>
                </div>
                <div class="col-sm-10">
                    <!-- Contents start here... -->
                    <h1><%= title %> : <%= genre.name %>
                    </h1>
                    <div style="margin: 20px 20px 0 0 ;">
                        <h4>Books</h4>
                        <dl>
                            <% if (genre_books.length> 0) { %>
                                <% genre_books.forEach((book)=> { %>
                                    <dt><a href="<%= book.url %>"><%= book.title %></a></dt>
                                    <dd><%= book.summary %></dd>
                                <% }); %>
                            <% } else { %>
                                <p>This genre has no books.</p>
                            <% } %>
                        </dl>
                    </div>
                    <hr>
                    <p><a href="<%= genre.url + '/delete' %>">Delete genre</a></p>
                    <p><a href="<%= genre.url + '/update' %>">Update genre</a></p>
                    <!-- Contents end here!!! -->
                </div>
            </div>
        </div>
    </body>

</html>