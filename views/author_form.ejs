<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); -%>

    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-2">
                    <%- include('partials/sidenav'); -%>
                </div>
                <div class="col-sm-10">
                    <!-- Contents start here... -->
                    <h1><%= title %></h1>
                    <form action="" method="POST">
                        <div class="form-group">
                            <label for="first_name">First Name:</label>
                            <input type="text" id="first_name" class="form-control" placeholder="First name (John)" name="first_name" value="<%= author === undefined ? '' : author.first_name %>" required>
                            <label for="family_name">Family Name:</label>
                            <input type="text" name="family_name" id="family_name" required placeholder="Family name (Doe)" value="<%= author === undefined ? '' : author.family_name %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="date_of_birth">Date of birth:</label>
                            <input type="date" class="form-control" name="date_of_birth" id="date_of_birth" value="<%= undefined === author ? '' : author.dob %>">
                            <label for="date_of_death">Date of death:</label>
                            <input type="date" class="form-control" name="date_of_death" id="date_of_death" value="<%= author === undefined ? '' : author.dod %>">
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Submit</button>
                    </form>
                    <% if (errors) { %> 
                        <ul>
                            <% errors.forEach((err) => { %>
                                <li><%= err.msg %></li>
                            <% }) %> 
                        </ul>
                    <% } %> 
                    <!-- Contents end here!!! -->
                </div>
            </div>
        </div>
    </body>

</html>